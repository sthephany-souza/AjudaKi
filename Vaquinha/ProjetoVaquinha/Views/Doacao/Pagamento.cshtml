@{
    ViewData["Title"] = "Doação";
}

<nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light mb-3">
    <div class="search-box navbar-right">
        <form class="form-inline">
            <i class="bi bi-search"></i>
            <input class="form-control mr-sm-2" type="search" placeholder="Buscar" aria-label="Search">
            <i class="bi bi-three-dots-vertical"></i>
        </form>
    </div>
</nav>

<main class="pagamento-container">
    <div class="topo">
        <a href="~/Home/Inicio" class="voltar"><span class="bi bi-arrow-left"></span></a>
        <h2 class="titulo">Formas de pagamento:</h2>
    </div>
    
    <div class="pagamento">
        <div class="pix">
            <i class="bi bi-pix"></i>
            <a href="" class="btn">PIX</a>
        </div>

        <div class="cartao-debito">
            <i class="bi bi-credit-card"></i>
            <a href="" class="btn">Cartão Débito</a>
        </div>

        <div class="cartao-credito">
            <i class="bi bi-credit-card-2-front"></i>
            <a href="" class="btn">Cartão Crédito</a>
        </div>
    </div>

    <div class="footer">
        <h2 class="valor-doacao">Valor da Doação: </h2>
        <h2 class="rs">R$</h2>
        <h2 class="valor"></h2>
        
        <button class="btn btn-pagamento" type="submit">Finalizar</button>
    </div>
</main>

<style>
    body {
        background-color: #1F4E79;
        position: absolute;
        width: 1240px;
        height: 460px;
        margin: 0 25px;
    }

    .navbar {
        background-color: #4A90E2;
        color: #fff;
        display: flex;
        justify-content: flex-end;
        align-items: center;
        border-bottom-left-radius: 15px;
        border-bottom-right-radius: 15px;
    }

    .form-inline {
        display: flex;
        align-items: center;
        padding: 5px;
    }

    .form-inline input {
        margin: 0 8px;
        border: none;
        border-radius: 20px;
        width: 220px;
        height: 30px;
    }

    .form-inline i {
        font-size: 25px;
    }

    .pagamento-container {
        background-color: #fff;
        border-radius: 15px;
        height: 500px;
    }

    .pagamento-container .topo {
        display: flex;
        justify-content: flex-start;
        align-items: center;
        padding: 15px 0 0 15px;
    }

    .topo .voltar {
        margin-right: 35%;
    }

    .voltar span {
        color: #000;
        font-size: 30px;
    }

    .pagamento-container .pagamento{
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: center;
        margin: 4% 0 15% 0;
    }

    .pagamento .pix {
        display: flex;
        justify-content: center;
        align-items: center;
        margin: 5px 0 5px 0;
    }

    .pix a {
        background-color: #D9D9D9;
        color: #000;
        width: 200px;
        height: 50px;
        border-radius: 5px;
        padding-top: 10px;
        margin-left: 5px;
    }

    .pagamento .cartao-debito {
        display: flex;
        justify-content: center;
        align-items: center;
        margin: 5px 0;
    }

    .cartao-debito a {
        background-color: #D9D9D9;
        color: #000;
        width: 200px;
        height: 50px;
        border-radius: 5px;
        padding-top: 10px;
        margin-left: 5px;
    }

    .pagamento .cartao-credito {
        display: flex;
        justify-content: center;
        align-items: center;
        margin: 5px 0;
    }

    .cartao-credito a {
        background-color: #D9D9D9;
        color: #000;
        width: 200px;
        height: 50px;
        border-radius: 5px;
        padding-top: 10px;
        margin-left: 5px;
    }

    .pagamento-container .footer {
        background-color: #D9D9D9;
        display: flex;
        justify-content: space-between;
        align-items: center;
        width: 100%;
        padding: 5px 15px;
        border-bottom-left-radius: 15px;
        border-bottom-right-radius: 15px;
    }

    .footer .btn-pagamento {
        border-radius: 15px 0 15px 0;
        background-color: #4A90E2;
        color: #fff;
        width: 100px;
        height: 35px;
    }
</style>
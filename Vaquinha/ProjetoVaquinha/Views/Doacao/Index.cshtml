@{
    ViewData["Title"] = "Doação";
}

<nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light mb-3">
    <div class="search-box navbar-right">
        <form class="form-inline">
            <i class="bi bi-search"></i>
            <input class="form-control mr-sm-2" type="search" placeholder="Buscar" aria-label="Search">
            <i class="bi bi-three-dots-vertical"></i>
        </form>
    </div>
</nav>

<main class="doacoes-container">
    <div class="topo">
        <a href="~/Home/Inicio" class="voltar">
            <span class="bi bi-arrow-left"></span>
        </a>

        <h2 class="titulo">Doações:</h2>
    </div>

    <div class="doacoes">
        <div class="slideshow-cartoes">
            <button class="btn btn-secondary">
                <span class="bi bi-arrow-left"></span>
            </button>

            <div class="card">
                <img class="imagem-cartao" src="" alt="">

                <div class="cartao-infos">
                    <h5 class="titulo-cartao"></h5>

                    <p class="local">
                        <span class="bi bi-geo-alt-fill"></span>
                    </p>
                    <p class="tamanho"></p>
                    <p class="contato"></p>

                    <a href="~/Doacao/InfoProdutos" class="btn">
                        Ver Mais...
                    </a>
                </div>
            </div>

            <div class="card">
                <img class="imagem-cartao" src="" alt="">

                <div class="cartao-infos">
                    <h5 class="titulo-cartao"></h5>

                    <p class="local">
                        <span class="bi bi-geo-alt-fill"></span>
                    </p>
                    <p class="tamanho"></p>
                    <p class="contato"></p>

                    <a href="~/Doacao/InfoProdutos" class="btn">
                        Ver Mais...
                    </a>
                </div>
            </div>

            <div class="card">
                <img class="imagem-cartao" src="" alt="">

                <div class="cartao-infos">
                    <h5 class="titulo-cartao"></h5>

                    <p class="local">
                        <span class="bi bi-geo-alt-fill"></span>
                    </p>
                    <p class="tamanho"></p>
                    <p class="contato"></p>

                    <a href="~/Doacao/InfoProdutos" class="btn">
                        Ver Mais...
                    </a>
                </div>
            </div>

            <button class="btn btn-secondary">
                <span class="bi bi-arrow-right"></span>
            </button>
        </div>
    </div>
</main>

<style>
    body {
        background-color: #1F4E79;
        position: absolute;
        width: 1240px;
        height: 460px;
        margin: 0 25px;
    }

    .navbar {
        background-color: #4A90E2;
        color: #fff;
        display: flex;
        justify-content: flex-end;
        align-items: center;
        border-bottom-left-radius: 15px;
        border-bottom-right-radius: 15px;
    }

    .form-inline {
        display: flex;
        align-items: center;
        padding: 5px;
    }

    .form-inline input {
        margin: 0 8px;
        border-radius: 20px;
        border: none;
        width: 220px;
        height: 30px;
    }

    .form-inline i {
        font-size: 25px;
    }

    .doacoes-container {
        background-color: #fff;
        border-radius: 15px;
        height: 500px;
    }

    .doacoes-container .topo {
        display: flex;
        justify-content: flex-start;
        align-items: center;
        padding: 15px;
    }

    .topo .voltar {
        margin-right: 40%;
    }

    .voltar span {
        color: #000;
        font-size: 30px;
    }

    .slideshow-cartoes {
        display: flex;
        gap: 20px;
        flex-wrap: wrap;
    }

    .slideshow-cartoes .card {
        max-width: 260px;
        max-height: 500px;
        border: none;
    }

    .card .imagem-cartao {
        height: 50%;
    }

    .card a {
        background-color: #4A90E2;
        color: #fff;
        border-radius: 15px 0 15px 0;
    }

    .btn-secondary {
        color: #fff;
        width: 70px;
        height: 70px;
        border: 0;
        cursor: pointer;
        display: flex;
        align-items: center;
        justify-content: center;
    }
</style>
@{
    ViewData["Title"] = "Sobre o produto";
}

<div class="const">
    <div class="sidebar">
        <div class="doadores">
            <h1 class="titulo-doadores">Lista de doadores:</h1>

            <p class="lista-doadores">

            </p>
        </div>
    </div>

    <main class="doacao-container">
        <div class="container">
            <div class="topo">
                <a href="~/Doacao/Index" class="voltar"><span class="bi bi-arrow-left"></span></a>
                <h2 class="titulo">Sobre o produto:</h2>
            </div>

            <div class="conteudos">
                <div class="sobre">
                    <div class="imagem">
                        <img class="imagem" src="" alt="">
                    </div>

                    <div class="informacao">
                        <p class="texto">

                        </p>
                    </div>
                </div>

                <div class="extras">
                    <div class="meta">
                        <div class="progress">
                            <div class="barra-progresso" role="progressbar" aria-valuenow="0" aria-valuemin="0"
                                aria-valuemax="1">
                            </div>
                        </div>

                        <div class="meta-progresso">
                            <p class="min">
                                0
                            </p>

                            <p class="max">
                                1
                            </p>
                        </div>

                        <p class="progesso">
                            Progresso: 0%
                        </p>

                        <a href="" class="btn btn-doar">Doar</a>
                    </div>

                    <div class="comentarios">
                        <h5 class="titulo-comentario">Comentário: </h5>

                        <p class="comentario">

                        </p>

                        <input type="text" name="" id="" placeholder="Digite aqui seu comentário...">
                        <a class="btn">
                            <span class="bi bi-arrow-right"></span>
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </main>
</div>
<style>
    body {
        background-color: #1F4E79;
        position: absolute;
        top: 50%;
        left: 50%;
        transform: translate(-50%, -50%);
        width: 1240px;
        height: 460px;
        margin: 0 25px;
    }

    .sidebar {
        position: fixed;
        top: 0;
        left: 0;
        bottom: 0;
        padding: 15px;
        width: 300px;
        height: 500px;
    }

    .sidebar .doadores {
        background-color: #fff;
        border-radius: 15px;
        height: 450px;
        display: flex;
        flex-direction: column;
        padding: 15px;
    }

    .doacao-container {
        position: fixed;
        margin-left: 320px;
        margin-right: 56px;
        top: 0;
        left: 0;
        bottom: 0;
        padding: 15px;
    }

    .doacao-container .container {
        background-color: #fff;
        border-radius: 15px;
        width: 850px;
        height: 450px;
        display: flex;
        flex-direction: column;
        padding: 15px;
    }

    .container .topo {
        display: flex;
        justify-content: flex-start;
        align-items: center;
    }

    .topo .voltar {
        margin-right: 30%;
    }

    .voltar span {
        color: #000;
        font-size: 30px;
    }

    .conteudos .sobre {
        display: grid;
        row-gap: 30px;
        grid-template-columns: auto auto auto;
        margin: 0 0 20px 35px;
    }

    .sobre .imagem {
        width: 200px;
        height: 200px;
    }

    .sobre .informacao {
        background-color: #D9D9D9;
        width: 500px;
        height: 200px;
        padding: 20px;
        border-radius: 15px;
    }

    .conteudos .extras {
        display: grid;
        row-gap: 50px;
        grid-template-columns: auto auto auto;
        margin: 0 0 20px 150px;
    }

    .extras .meta {
        width: 200px;
        height: 30px;
        margin-right: 30px;
    }

    .meta-progresso {
        display: flex;
        justify-content: space-between;
    }

    .extras .comentarios {
        background-color: #4A90E2;
        width: 350px;
        height: 120px;
        padding: 20px;
        border-radius: 15px;
    }

    .comentarios input {
        border: none;
        border-radius: 20px;
        width: 80%;
    }

    .comentarios input::placeholder {
        color: #9d9d9d;
        opacity: 1;
        padding-left: 5px;
    }

    .comentarios span {
        font-size: 20px;
        color: #000;
    }

    .btn.btn-doar {
        background-color: #4A90E2;
        color: #fff;
        border-radius: 15px 0 15px 0;
        width: 100px;
        margin-left: 50px;
    }
</style>